{
  "manifest_version": 3,
  "name": "UW Course Grades Viewer",
  "version": "1.0",
  "description": "Displays grade distribution for UW courses.",
  "permissions": [
    "activeTab",
    "scripting",
    "https://madgrades.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://my.wisc.edu/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}